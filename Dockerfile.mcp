FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --only=production

# Copy source code
COPY mcp_servers/ ./mcp_servers/
COPY core_systems/ ./core_systems/

# Create directories
RUN mkdir -p logs data reports

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:' + process.env.MCP_SERVER_PORT + '/health', (r) => { process.exit(r.statusCode === 200 ? 0 : 1); })"

# Run as non-root user
USER node

# Expose port (will be overridden by environment)
EXPOSE 3000

CMD ["node", "mcp_servers/base_mcp_server.js"]
