# Platinum Tier - Cloud Agent Configuration (READ-ONLY)
# This file should be configured on the Oracle Cloud VM at: /opt/ai-employee/.env.cloud
# SECURITY: Only read-only credentials, NO sending/posting capabilities

# Agent Identity
AGENT_ID=cloud
AGENT_ROLE=draft_generator
NODE_ENV=production

# Vault Configuration
VAULT_PATH=/opt/ai-employee/vault

# Gmail OAuth (READ-ONLY scope)
# Generate a separate OAuth token with ONLY read access
GMAIL_CLIENT_ID=your-gmail-client-id
GMAIL_CLIENT_SECRET=your-gmail-client-secret
GMAIL_REFRESH_TOKEN_READ_ONLY=your-read-only-refresh-token

# Odoo (READ-ONLY API key)
# Create a separate Odoo user with read-only permissions
ODOO_CLOUD_URL=https://rubaiya1.odoo.com
ODOO_DB=rubaiya1
ODOO_READ_ONLY_KEY=your-read-only-api-key

# Monitoring & Alerting
SLACK_WEBHOOK_URL=your-slack-webhook-url
ADMIN_EMAIL=your-email@example.com

# MCP Server Ports (Read-Only Capabilities)
MCP_COMMUNICATION_PORT=3001
MCP_BUSINESS_OPS_PORT=3002
MCP_INTEGRATION_PORT=3004

# Health Check
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8080
LOG_LEVEL=info

# Git Configuration
GIT_REMOTE=origin
GIT_BRANCH=main
GIT_AUTO_COMMIT=true
GIT_AUTO_PUSH=true
GIT_AUTO_PULL=true
CONFLICT_STRATEGY=local-wins

# Vault Sync
VAULT_SYNC_ENABLED=true
VAULT_SYNC_INTERVAL=300000  # 5 minutes

# Watcher Configuration
GMAIL_WATCHER_ENABLED=true
GMAIL_CHECK_INTERVAL=300000  # 5 minutes
FILE_DROP_WATCHER_ENABLED=true
FILE_DROP_CHECK_INTERVAL=300000  # 5 minutes

# Work Zone Configuration (Draft-Only)
ALLOWED_OPERATIONS=read,draft,create_approval_request
FORBIDDEN_OPERATIONS=send_email,post_social,make_payment,send_whatsapp

# IMPORTANT SECURITY NOTES:
# - NO EMAIL_PASSWORD (no SMTP sending)
# - NO LINKEDIN_CLIENT_SECRET (no posting)
# - NO TWITTER tokens (no posting)
# - NO FACEBOOK tokens (no posting)
# - NO WHATSAPP credentials (no messaging)
# - NO PAYMENT credentials (no transactions)
# - Cloud can ONLY read and draft, NEVER execute!
